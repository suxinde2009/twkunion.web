= simple_form_for resource, as: resource_name, url: registration_path(resource_name), validate: true, html: { class: 'form-horizontal' } do |f|
  = f.input :name
  = f.input :bio, as: :text, input_html: { rows: 5, class: 'span5' }

  .form-actions
    = f.button :submit, '保存设置', class: 'btn btn-success btn-large'