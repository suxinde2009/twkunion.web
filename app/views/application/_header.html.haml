/ Navbar \==================================================
.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = button_tag class: 'btn btn-navbar', data: { target: '.nav-collapse', toggle: 'collapse' } do
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'brand' do
        = image_tag('twkunion-tm.png')
      .nav-collapse.collapse
        %ul.nav
          = main_nav :home do
            = link_to '首页', root_path
          %li= link_to '应用', '#'
          %li= link_to '专题', '#'
          %li= link_to '下载', '#'
          = main_nav :bbs do
            %li= link_to '论坛', bbs_root_path

        = form_tag '/', class: 'navbar-search pull-left form-search' do
          .input-append
            = text_field_tag :q, nil, class: 'span2 search-query', placeholder: '请输入关键字...'
            = button_tag '搜索', class: 'btn btn-inverse'

        %ul.nav.pull-right
          - if user_signed_in?
            = main_nav :settings, { class: 'dropdown' } do
              = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                %img{:alt => "", "data-src" => "holder.js/30x30"}
                = current_user.name
                %b.caret
              %ul.dropdown-menu
                %li= link_to '个人设置', edit_user_registration_path(type: :profile)
                %li= link_to '修改密码', edit_user_registration_path(type: :password)
                %li.divider
                %li= link_to '登出', destroy_user_session_path, method: :delete
          - else
            %li= link_to t('views.layout.sign_up').html_safe, new_user_registration_path, class: 'signup'
            %li= link_to '登录', new_user_session_path