/ Navbar \==================================================
.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = button_tag class: 'btn btn-navbar', data: { target: '.nav-collapse', toggle: 'collapse' } do
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'brand' do
        = image_tag('twkunion-tm.png')
      .nav-collapse.collapse
        %ul.nav
          %li.active
            = link_to '首页', root_path
          %li= link_to '应用', '#'
          %li= link_to '专题', '#'
          %li= link_to '下载', '#'
          %li= link_to '论坛', bbs_root_path

        = form_tag '/', class: 'navbar-search pull-left form-search' do
          .input-append
            = text_field_tag :q, nil, class: 'span2 search-query', placeholder: '请输入关键字...'
            = button_tag '搜索', class: 'btn btn-inverse'

        %ul.nav.pull-right
          %li= link_to t('views.layout.sign_up').html_safe, new_user_registration_path, class: 'signup'
          %li= link_to '登录', new_user_session_path