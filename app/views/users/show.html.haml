- content_for :jumbotron do
  .jumbotron.masthead.profile
    .container
      .row
        .span8.clearfix
          = link_to user_path(uid: resource.uid), class: 'user-avatar' do
            %img{ data: { src: 'holder.js/80x80' } }
          .head-line
            %h1
              = resource.name
              的吞食天地          
            %ul.nav.nav-pills
              %li.active= link_to '话题', user_path(resource)
              %li= link_to '收藏', favourites_user_path(resource)
              %li= link_to '关注', followers_user_path(resource)
        .span4
          - if resource == current_user
            %p
              = link_to '连接到社交网站', '#'
              ，你可以获得更多的粉丝哦
            %ul.social-authentications.cleafix
              - User.omniauth_providers.reverse.each do |provider|
                - if resource.authenticated_with?(provider)
                  %li= link_to provider, '#', class: provider, title: t("views.auth.#{provider}")
                - else
                  %li= link_to provider, '#', class: "#{provider} disabled", title: t("views.auth.#{provider}")
          - else
            - if resource.authentications.any?
              %p 喜欢他/她，就了解他/她更多吧
              %ul.social-authentications.cleafix
                - resource.authentications.each do |auth|
                  %li= link_to auth.provider, '#', class: auth.provider, title: t("views.auth.#{auth.provider}")
  .bs-docs-social.profile
    .container
      .row 
        .span6
          %h3
            %i.icon-list
            发起的话题
          - if resource.bbs_posts.empty?
            %p 这里空空荡荡
          - else
            %ul.my-created-posts.clearfix
              - resource.bbs_posts.page(params[:page]).each do |post|
                %li.cleaffix
                  %h3= link_to post.title, bbs_board_post_path(post.board, post), title: post.title 
                  .meta.clearfix
                    %p.time= t('views.bbs.post_created_ago', ago: time_ago_in_words(post.created_at))
                    .counter
                      %span.views-num
                        %i.ico{ title: '浏览次数' }
                        %strong 3
                      %span.likes-num
                        %i.ico{ title: '喜欢次数' }
                        %strong 6
                      %span.replies-num
                        %i.ico{ title: '回复条数' }
                        %strong 9
            %ul.pager
              %li= link_to t('views.pager.prev').html_safe, '#'
              %li= link_to t('views.pager.next').html_safe, '#'
        .span6
          %h3
            %i.icon-list
            参与的话题
          - if resource.bbs_posts.empty?
            %p 这里空空荡荡
          - else
            %ul.my-replied-posts.clearfix
              - resource.bbs_posts.page(params[:page]).each do |post|
                %li.clearfix
                  %h3= link_to post.title, bbs_board_post_path(post.board, post), title: post.title 
                  .meta.clearfix
                    %p.time= t('views.bbs.post_created_ago', ago: time_ago_in_words(post.created_at))
                    .counter
                      %span.views-num
                        %i.ico{ title: '浏览次数' }
                        %strong 3
                      %span.likes-num
                        %i.ico{ title: '喜欢次数' }
                        %strong 6
                      %span.replies-num
                        %i.ico{ title: '回复条数' }
                        %strong 9
            %ul.pager
              %li= link_to t('views.pager.prev').html_safe, '#'
              %li= link_to t('views.pager.next').html_safe, '#'