- content_for :sidebar do
  = render '/application/sidebars/topic_show'

= render '/application/tabs/topic_articles'

%ul.topic_articles
  - collection.each do |resource|
    %li.group
      = link_to [parent, resource] do
        %span.category [#{resource.category_name}]
        = resource.title
        %span.time= resource.created_at.to_date
